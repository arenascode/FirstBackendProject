<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/static/css/style.css" />
    <title>Products</title>
  </head>
  <body>
    <main>
      <nav
        class="d-flex flex-column justify-content-between w-100"
        style="position: fixed; background-color: darkgray; z-index: 99"
      >
        <h3>Products</h3>
        <div>
          <div class="links d-flex justify-content-between w-100">
            <section class="flex row mb-2">
              <div class="m-2"><a href="/profile">Home</a></div>
              <div class="m-2"><a href="/logout">Log Out</a></div>
              <div id="paginateOptions">
                {{#if pagination.hasPrevPage}}
                  <a href={{pagination.prevLink}}>Previous Page</a>
                {{/if}}
                &nbsp;
                {{#if pagination.hasNextPage}}
                  <a href={{pagination.nextLink}}>Next Page</a>
                {{/if}}
              </div>
            </section>

            <a href="" class="align-self-end me-4 mb-2" id="getCart">View Your Cart</a>
            <div class="modalCart">
              <div class="modalContent">
                <div class="cartDetails">
                  <div class="titleAndCloseBtn">
                    <h3>Your Cart</h3>
                    <button type="button" id="closeModalBtn" class="btn"><img src="../static/assets/cancelar.png" alt=""></button>
                  </div>
                
                <div class="cartDetails_totalAmount">
                  $324345
                </div>
                  <div class="btns_CartDetails">
                    <button type="button" class="btn btn-danger btn-sm" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .60rem;">Delete Cart</button>
                    <button type="button" class="btn btn-success btn-sm" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .60rem; margin-left: 5px">Confirm Cart</button>
                  </div>
                </div>
                <div class="cartContent">
                  <ul class="cartProducts">

                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>

      <hr />
      <section
        id="showData"
        class="row row-cols-lg-auto g-3 align-items-center container-fluid d-flex flex-wrap ml-30"
        style="margin-top: 200px; overflow-y:scroll"
      >
        {{#if productsExist}}
          {{#each products}}
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <h5 class="card-text">{{this.description}}</h5>
                <h5 class="card-text font-bold">Precio:{{this.price}}</h5>
                <button
                  href="#"
                  class="btn btn-secondary"
                  data-idproduct={{this._id}}
                >Add To Cart</button>
              </div>
            </div>
          {{/each}}
        {{else}}
          Sin productos...
        {{/if}}
      </section>

    </main>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/products.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>