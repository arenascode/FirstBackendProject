<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style.css">
  <title>Products</title>
</head>
<body>
<main>
  <h1 style="padding-top: 10px">Products</h1>
  <nav>
    <section class="flex row mb-10">
  <div class="m-3"><a href="/profile">Home</a></div>
  <div class="m-3"><a href="/logout">Log Out</a></div>
  </section>
  <section id="paginateOptions">
    {{#if pagination.hasPrevPage}}
    <a href={{pagination.prevLink}}>Previous Page</a>
    {{/if}}
    &nbsp;
    {{#if pagination.hasNextPage}}
    <a href={{pagination.nextLink}}>Next Page</a>
    {{/if}}
  </section>
  </nav>
 
  <hr>
  <section id="showData" class="row row-cols-lg-auto g-3 align-items-center  container-fluid d-flex flex-wrap ml-30" style="margin-top: 70px;">
    {{#if productsExist}}
    {{#each products}}
    <div class="card">
    <div class="card-body">
    <h4 class="card-title">{{this.title}}</h4>
    <h5 class="card-text">{{this.description}}</h5>
    <h5 class="card-text font-bold">Precio:{{this.price}}</h5>
    <button href="#" class="btn btn-secondary" data-idproduct={{this._id}}>Add To Cart</button>
    </div>
    </div>
    {{/each}}
    {{else}}
    Sin productos...
    {{/if}}
  </section>
  
</main>
<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/products.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>
